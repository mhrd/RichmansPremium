<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <TextView
        android:id="@+id/txt_communication_paths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/toolbar"
        android:layout_margin="20dp"
        android:text="@string/communication_paths"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_email"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignEnd="@id/txt_communication_paths"
        android:layout_alignRight="@id/txt_communication_paths"
        android:layout_below="@id/txt_communication_paths"
        android:src="@drawable/email" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_email"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/img_email"
        android:layout_toStartOf="@id/img_email"
        android:text="ایمیل"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt1_email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/txt1_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toLeftOf="@id/txt_email"
        android:layout_toStartOf="@id/txt_email"
        android:text="09109295004"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt1_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/txt_email"
        android:layout_below="@+id/txt_email"
        android:layout_marginTop="16dp"
        android:text="پیامک"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/txt_email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/txt_email"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toLeftOf="@id/txt_email"
        android:layout_toStartOf="@id/txt_email"
        android:text="madresetavangari@gmail.com"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_telegram"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignLeft="@+id/img_email"
        android:layout_alignStart="@+id/img_email"
        android:layout_below="@+id/txt1_email"
        android:layout_marginTop="30dp"
        android:src="@drawable/telegram" />

    <ImageView
        android:id="@+id/img_channel"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignTop="@id/img_telegram"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/img_telegram"
        android:layout_toStartOf="@id/img_telegram"
        android:src="@drawable/channel" />

    <TextView
        android:id="@+id/txt_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_channel"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/img_channel"
        android:layout_toStartOf="@id/img_channel"
        android:text="کانال تلگرام"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tchannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_email_address"
        android:layout_alignStart="@id/txt_email_address"
        android:layout_below="@id/txt_channel"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:text="\@madrasetavangari"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_answerID"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignEnd="@id/img_channel"
        android:layout_alignRight="@id/img_channel"
        android:layout_below="@id/tchannel"
        android:layout_marginTop="16dp"
        android:src="@drawable/answer" />

    <TextView
        android:id="@+id/txt_answerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_answerID"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/img_answerID"
        android:layout_toStartOf="@id/img_answerID"
        android:text="آیدی تلگرام جهت ارسال نظرات و سوالات"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_email_address"
        android:layout_alignStart="@id/txt_email_address"
        android:layout_below="@id/txt_answerId"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="\@hamid8r5ir"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/txtw1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toLeftOf="@id/txt_email"
        android:layout_toStartOf="@id/txt_email"
        android:text="www.madrasetavangari.ir"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/img_answerID"
        android:layout_below="@+id/tid"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="وبسایت"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/txtw3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/txtw4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toLeftOf="@id/txt_email"
        android:layout_toStartOf="@id/txt_email"
        android:text="www.faraagahy.ir"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtw4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtw1"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/img_email"
        android:layout_toStartOf="@id/img_email"
        android:textColor="@android:color/black"
        android:textSize="17sp" />


</RelativeLayout>
